{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6", "es2015", "dom"],
        "outDir": "build",
        "rootDir": "src",
        "types": ["node"],
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false, //to help with asyncs
        "strictNullChecks": false, //can send nulls for values
        "strictPropertyInitialization": false, //remove property initialization
        "moduleResolution": "node", //to import tslib correctly for async/await
        "alwaysStrict": true
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
    ]
}